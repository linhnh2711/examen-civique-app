rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // SECURITY RULES FOR EXAMEN CIVIQUE APP
    //
    // These rules ensure that:
    // 1. Users can only read/write their own data
    // 2. Authentication is required for all operations
    // 3. Data structure is validated before writes

    // Users collection - stores all user quiz data
    match /users/{userId} {
      // Users can only access their own documents
      allow read, write: if request.auth != null && request.auth.uid == userId;

      // Additional validation for writes
      allow create, update: if request.auth != null
        && request.auth.uid == userId
        && request.resource.data.keys().hasAll(['lastSyncTimestamp'])
        && request.resource.data.lastSyncTimestamp is number;
    }

    // Deny all other access by default
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
